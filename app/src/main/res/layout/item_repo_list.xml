<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/item_title_repo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_repo"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="#3977b5"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/item_image_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_desc_repo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="72dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/desc_repo"
            android:textAlignment="viewStart"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/item_image_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/item_title_repo"
            app:layout_constraintTop_toBottomOf="@id/item_title_repo" />

        <ImageView
            android:id="@+id/item_image_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toStartOf="@id/item_username"
            app:layout_constraintStart_toEndOf="@id/item_username"
            app:layout_constraintTop_toTopOf="@id/item_title_repo"

            />

        <TextView
            android:id="@+id/item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxWidth="100dp"
            android:maxLines="1"
            style="@style/username"
            app:layout_constraintEnd_toStartOf="@id/item_first_last_name"
            app:layout_constraintStart_toEndOf="@id/item_first_last_name"
            app:layout_constraintTop_toBottomOf="@id/item_image_profile" />

        <TextView
            android:id="@+id/item_first_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxWidth="120dp"
            android:maxLines="2"
            style="@style/FirstLastName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_username"
            />

        <ImageView
            android:id="@+id/item_icon_pull_request"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="@id/item_title_repo"
            app:layout_constraintTop_toBottomOf="@id/item_desc_repo" />

        <TextView
            android:id="@+id/item_number_pull_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="526"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="#df9407"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/item_icon_pull_request"
            app:layout_constraintStart_toEndOf="@id/item_icon_pull_request"
            app:layout_constraintTop_toTopOf="@id/item_icon_pull_request" />

        <ImageView
            android:id="@+id/item_icon_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@id/item_icon_pull_request"
            app:layout_constraintStart_toEndOf="@id/item_number_pull_request"
            app:layout_constraintTop_toTopOf="@id/item_icon_pull_request" />

        <TextView
            android:id="@+id/item_number_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="66"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="#df9407"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/item_icon_star"
            app:layout_constraintStart_toEndOf="@id/item_icon_star"
            app:layout_constraintTop_toTopOf="@id/item_icon_star" />

        <View
            android:id="@+id/divise"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/item_title_repo"
            app:layout_constraintTop_toBottomOf="@id/item_icon_pull_request" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>